<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1579642761360-eabd1cca1e81?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80);">
  <div class="container">
    <h1>Movies</h1>
    <p>Welcome to my watch list of movies!</p>
    <%= link_to "Add List", new_list_path, class: "btn" %>
  </div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
          <p><%= link_to list.name, list_path(list), class: "none" %></p>
          <%= link_to "+", root_path,
              method: :delete,
              data: { confirm: "Are you sure you want to delete #{list.name}?" },
              class: "card-remove-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
